---
// SocialButton component - Specialized button for social media links
import { Icon } from 'astro-icon/components';

interface Props {
  platform: string;
  url: string;
  icon: string;
}

const { platform, url, icon } = Astro.props;
---

<style>
  .social-button:hover {
    background-color: var(--biolink-social-button-hover-background);
  }
</style>

<a 
  href={url} 
  target="_blank" 
  rel="noopener noreferrer"
  class="social-button neo-button w-12 h-12 flex items-center justify-center p-0 rounded-lg"
  style={`background-color: var(--biolink-social-button-background);`}
  aria-label={`Visit ${platform}`}
>
  <Icon name={icon} class="w-6 h-6" style="color: var(--biolink-section-background)" />
</a>