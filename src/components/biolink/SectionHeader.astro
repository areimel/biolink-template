---
// SectionHeader component - Consistent h2 styling for biolink sections
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<h2 class="text-xl font-bold font-heading mb-3 tracking-tight max-w-sm mx-auto text-center" style="text-wrap: balance; color: var(--biolink-accent-text-color);">
  {text}
</h2>