---
// LinkButton component - Now uses BaseButton for DRY principles
import BaseButton from '../common/BaseButton.astro';

interface Props {
  title: string;
  url?: string;
  icon?: string;
  modal?: string;
}

const { title, url, icon, modal } = Astro.props;

// Determine button type
const type = modal ? 'modal' : 'link';
---

<BaseButton 
  title={title}
  url={url}
  icon={icon}
  modal={modal}
  type={type}
/> 