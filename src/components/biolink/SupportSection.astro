---
// SupportSection component - Buy Me Coffee and Patreon support section
import LinksList from './LinksList.astro';
import SectionHeader from './SectionHeader.astro';

interface Props {
  supportLinks: Array<{
    title: string;
    url: string;
    icon?: string;
  }>;
}

const { supportLinks } = Astro.props;
---

<div class="w-full neo-container p-6" style="background-color: var(--biolink-section-background); color: var(--biolink-body-text-color);">
 
  <div class="w-full text-center">
    <SectionHeader text="Enjoy my work?" />
    <p class="text-sm font-mono font-semibold mb-4 tracking-tight max-w-sm mx-auto" style="text-wrap: balance; color: var(--biolink-body-text-color);">
      You can follow and support me on the following channels:
    </p>

    <!-- Support Links -->
    <LinksList links={supportLinks} />
  </div>
</div>